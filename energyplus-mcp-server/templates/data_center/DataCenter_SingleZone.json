  "outputs": {
    "standard": [
      "Zone Mean Air Temperature",
      "Facility Total Electricity Demand Rate",
      "Cooling Coil Total Cooling Rate",
      "Cooling Coil Electricity Rate",
      "Fan Electricity Rate",
      "ITE CPU Electricity Rate",
      "ITE Fan Electricity Rate",
      "ITE UPS Electricity Rate"
    ],
    "custom_ems": [
      {
        "name": "PUE",
        "description": "Power Usage Effectiveness (Total Power / IT Power)",
        "unit": "dimensionless"
      },
      {
        "name": "CRAC SCOP",
        "description": "Sensible Coefficient of Performance for CRAC system",
        "unit": "dimensionless"
      },
      {
        "name": "CRAC Net Sensible Capacity",
        "description": "Net sensible cooling delivered to zone",
        "unit": "W"
      }
    ]
  },

  "simulation_settings": {
    "timestep": 6,
    "run_design_days": true,
    "run_weather_file": false,
    "sizing_calculations": false
  },

  "notes": [
    "Based on Liebert DSE 125 CRAC system with pumped refrigerant economizer",
    "IT equipment uses variable CPU loading schedule throughout the year",
    "PUE and SCOP calculated via EMS (Energy Management System)",
    "Design days are for Denver, CO - replace with location-appropriate design days",
    "For weather file simulations, set Run Simulation for Weather File Run Periods to Yes"
  ]
